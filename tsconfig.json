{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2016",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist",
    "types": ["node"],
    "baseUrl": ".",
    "strict": true,
    "lib": ["ES2016"],
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types", "node_modules/swagger-express-ts"],
    "rootDir": "./"
  },
  "exclude": ["node_modules/*"]
}
